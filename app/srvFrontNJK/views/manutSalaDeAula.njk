<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title or 'Página' }}</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        body {
            background-color: #f8f9fa;
        }
        .navbar {
            background-color: #9c38ff;
        }
        .navbar-brand img {
            border-radius: 50%;
        }
        .card {
            border: 1px solid #9c38ff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        .card-header {
            background-color: #9c38ff;
            color: white;
        }
        table {
            border: 1px solid #dee2e6;
        }
        th {
            background-color: #f1f1f1;
        }
        .btn-outline-primary {
            border-width: 2px;
        }
        .table-responsive {
            max-height: 400px;
        }
        footer {
            background-color: #f8f9fa;
            padding: 20px 0;
            text-align: center;
            margin-top: auto; 
        }
        footer a {
            color: #9c38ff;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                <img src="https://cdn-icons-png.flaticon.com/512/5310/5310672.png" alt="Escola" width="40" height="40">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent" aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/"> Home</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container my-5">
        <div class="card p-3 p-md-5">
            <div class="card-header d-flex justify-content-between align-items-center flex-wrap">
                <h2 class="mb-3 mb-md-0">Manutenção de Salas de Aula</h2>
            </div>
            
            <!-- Tabela -->
            <div class="table-responsive">
                <table class="table table-hover table-bordered mt-3">
                    <thead>
                        <tr>
                            <th class="text-center">ID</th>
                            <th>Descrição</th>
                            <th>Localização</th>
                            <th class="text-center">Capacidade</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for sala in salas %}
                            <tr>
                                <td class="text-center">{{ sala.id }}</td>
                                <td>{{ sala.descricao }}</td>
                                <td>{{ sala.localizacao }}</td>
                                <td class="text-center">{{ sala.capacidade }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="mt-5">
        <div class="container">
            <p>&copy; 2024 {{ title }}</p>
        </div>
    </footer>
    
    <!-- Bootstrap JS via CDN -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
